@model List<ProspectosModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista Prospecto
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-success">Crear Nuevo</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                <th>IdProspecto</th>
                <th>Nombre del Prospecto</th>
                <th>Primer Apellido</th>
                <th>Segundo Apellido</th>
                <th>Calle</th>
                <th>Numero</th>
                <th>Colonia</th>
                <th>Codigo Postal</th>
                <th>Telefono</th>
                <th>RFC</th>
                <th>Estatus</th>
                <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdProspecto</td>
                        <td>@item.nombredelProspecto</td>
                        <td>@item.primerApellido</td>
                        <td>@item.segundoApellido</td>
                        <td>@item.colonia</td>
                        <td>@item.numero</td>
                        <td>@item.colonia</td>
                        <td>@item.codigoPostal</td>
                        <td>@item.telefono</td>
                        <td>@item.rfc</td>
                        <td>@item.estatusTxt</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Mantenedor" class="btn btn-primary btn-sm" asp-route-IdProspecto=@item.IdProspecto>Ver</a>
                            <a asp-action="Eliminar" asp-controller="Mantenedor" class="btn btn-danger btn-sm" asp-route-IdProspecto=@item.IdProspecto>Eliminar</a>                            
                        </td>
                    </tr>
                    }
            </tbody>
        </table>
        
    </div>
</div>

